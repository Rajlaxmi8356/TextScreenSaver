#include<iostream.h>
#include<graphics.h>
#include<conio.h>
#include<math.h>
#include<dos.h>
main()
{int gd=DETECT,gm;
 initgraph(&gd,&gm,"C:\\turboc3\\bgi");
 int x1=10,x2=10,i=0,x3=10;
  while(!kbhit())
 {
 i=i+5;
 outtextxy(x1,x2,"WELCOME!"); delay(100);
 x1=x1+x3;
 x2=x2+x3;
 while((x1==400)&&(x2==400))
 {if((x1==400)&&(x2==400))
 {x1=10;x2=10;
 x1=x1+10;x2=x2+10;}
 }
 cleardevice();
}
 closegraph();  
 return 0;
 }
